<div
  class="container height-100 d-flex justify-content-center align-items-center"
>
  <div class="position-relative">
    <div class="card p-2 text-center">
      <h6>Please enter the one time password <br /> to verify your number</h6>
      <div>
        <span>A code has been sent to</span>
        <small>{{number}}</small>
      </div>
      <form action="/verifyOtp" method="post">
        <div
          id="otp"
          class="inputs d-flex flex-row justify-content-center mt-2"
        >

          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="first"
            name="1"
            maxlength="1"
          />
          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="second"
            name="2"
            maxlength="1"
          />
          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="third"
            name="3"
            maxlength="1"
          />
          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="fourth"
            name="4"
            maxlength="1"
          />
          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="fifth"
            name="5"
            maxlength="1"
          />
          <input
            class="m-2 text-center form-control rounded inputs"
            type="text"
            id="sixth"
            name="6"
            maxlength="1"
          />
        </div>
        <div class="mt-4">
          <button
            class="btn btn-danger px-4 validate"
            type="submit"
          >Validate</button>
        </div></form>
    </div>
  </div>
</div>

<script>
  $(".inputs").keyup(function () { if (this.value.length == this.maxLength) {
  $(this).next('.inputs').focus(); } });
</script>