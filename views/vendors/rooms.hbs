<div
  class="col-lg-10 ms-auto pt-5 mt-5"
  style="background-color: #FFE8D2;height: 100%;"
>

  <div><a href="/vendor/addRooms"><button class="btn btn-success">Add Rooms</button></a></div>

  <table id="example" class="table text-dark mt-5 ms-2" style="width:100%">
    <thead class="" style="color: #750404;">
      <tr>
        <th>Category</th>
        <th>Images</th>
        <th>Ameneties</th>
        <th>Bookings</th>
        <th>Remaining</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each rooms}}
        <tr>
          <td>{{this.rooms.category}}</td>
          <td><button
              type="button"
              class="btn btn-primary"
              data-toggle="modal"
              data-target="#exampleModal1{{this.rooms.roomId}}"
            >
              View Images
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal1{{this.rooms.roomId}}"
              tabindex="-1"
              role="dialog"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h6
                      class="modal-title text-secondary"
                      id="exampleModalLabel"
                    >Slide to see more images</h6>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body1">

                    <div
                      id="carouselExampleInterval"
                      class="carousel slide"
                      data-ride="carousel"
                    >
                      <div class="carousel-inner">
                        <div class="carousel-item active" data-interval="10000">
                          <img
                            src="/images/rooms/{{this.rooms.roomId}}0.jpg"
                            class="d-block w-100"
                            alt="..."
                          />
                        </div>

                        <div class="carousel-item">
                          <img
                            src="/images/rooms/{{this.rooms.roomId}}1.jpg"
                            class="d-block w-100"
                            alt="..."
                          />
                        </div>
                      </div>
                      <a
                        class="carousel-control-prev"
                        href="#carouselExampleInterval"
                        role="button"
                        data-slide="prev"
                      >
                        <span
                          class="carousel-control-prev-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a
                        class="carousel-control-next"
                        href="#carouselExampleInterval"
                        role="button"
                        data-slide="next"
                      >
                        <span
                          class="carousel-control-next-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-dismiss="modal"
                    >Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div></td>
          <td><button
              type="button"
              class="btn btn-primary"
              data-toggle="modal"
              data-target="#exampleModal{{this.rooms.roomId}}"
            >
              View
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal{{this.rooms.roomId}}"
              tabindex="-1"
              role="dialog"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body1 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;">
                      <ul class="list-group list-group-flus">
                        <li class="list-group-item">{{#if
                            this.rooms.ameneties.ac
                          }}<span class="ms-5"><i
                                class="fa-solid fa-wifi me-3"
                              ></i>Free Wifi</span>{{/if}}</li>
                        <li class="list-group-item">{{#if
                            this.rooms.ameneties.powerbackup
                          }}<span class="ms-5"><i
                                class="fa-solid fa-car-battery me-3"
                              ></i>Power backup</span>{{/if}}</li>
                        <li class="list-group-item">{{#if
                            this.rooms.ameneties.parking
                          }}
                            <span class="ms-5"><i
                                class="fa-solid fa-square-parking me-3"
                              ></i>Free parking</span>{{/if}}</li>
                        <li class="list-group-item">{{#if
                            this.rooms.ameneties.powerbackup
                          }}<span class="ms-5"><i
                                class="fa-solid fa-car-battery me-3"
                              ></i>Power backup</span>{{/if}}</li>
                      </ul>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-dismiss="modal"
                    >Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div></td>
          <td>{{this.rooms.bookingCount}}</td>
          <td>{{this.rooms.qty}}</td>
          <td><a href="/vendor/editRooms?id={{this.rooms.roomId}}"><i
                class="fa-regular fa-pen-to-square text-dark btn"
              ></i></a></td>
          <td><span class="material-icons text-danger btn">
              delete
            </span></td>
        </tr>
      {{/each}}

    </tbody>
    {{! <tfoot class="text-warning">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Contact</th>
        <th>Address</th>
        <th>Id</th>
        <th>Status</th>
        <th>Block</th>
      </tr>
    </tfoot> }}
  </table>
</div>